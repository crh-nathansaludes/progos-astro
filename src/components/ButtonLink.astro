---
export interface Props {
  text: string;
  href: string;
  icon?: string;
  type?: "cv" | "new-window";
}

const { text, href, type, icon = "caret-right" } = Astro.props;
---

<a class="button link-button" data-type={type} data-icon={icon} href={href} target="_blank">
  <span class="text">{text}</span>
</a>