---
export interface Option {
  name: string;
  value: string;
}

const { name, value } = Astro.props;
---
<label class="checkbox-option" for={name}>
  <input
    class="checkbox-input"
    type="checkbox"
    name={name}
    id={name}
    value={value}
  />
  <span class="checkbox-label">
    <slot />
  </span>
</label>